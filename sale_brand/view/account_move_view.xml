<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="invoice_brand_form" model="ir.ui.view">
        <field name="name">invoice.brand.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
          <field name="payment_reference" position="after">
            <field name="brand" attrs="{'invisible': [('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))], 'readonly': [('state', '!=', 'draft')]}"/>
          </field>
        </field>
    </record>

</odoo>
